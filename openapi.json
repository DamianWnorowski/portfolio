{
  "openapi": "3.0.0",
  "info": {
    "title": "Kaizen Elite API",
    "version": "1.0.0",
    "description": "Real-time collaborative development platform with edge functions",
    "contact": {
      "name": "API Support",
      "url": "https://github.com/yourusername/kaizen"
    }
  },
  "servers": [
    {
      "url": "https://kaizen-elite.vercel.app",
      "description": "Production server"
    },
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/auth/validate": {
      "post": {
        "summary": "Validate JWT token",
        "operationId": "validateToken",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                  }
                },
                "required": ["token"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token is valid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenValidation"
                }
              }
            }
          },
          "401": {
            "description": "Invalid token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "summary": "Refresh JWT token",
        "operationId": "refreshToken",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refreshToken": {
                    "type": "string"
                  }
                },
                "required": ["refreshToken"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New token issued",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "expiresIn": { "type": "number" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Refresh token expired or invalid"
          }
        }
      }
    },
    "/api/ratelimit/check": {
      "post": {
        "summary": "Check rate limit status",
        "operationId": "checkRateLimit",
        "tags": ["Rate Limiting"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "clientId": { "type": "string" },
                  "tier": {
                    "type": "string",
                    "enum": ["default", "strict", "relaxed", "burst"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Rate limit status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RateLimitStatus"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "headers": {
              "X-RateLimit-Limit": {
                "schema": { "type": "integer" }
              },
              "X-RateLimit-Remaining": {
                "schema": { "type": "integer" }
              },
              "X-RateLimit-Reset": {
                "schema": { "type": "integer" }
              }
            }
          }
        }
      }
    },
    "/api/geo/route": {
      "post": {
        "summary": "Get optimal geographic route",
        "operationId": "getRoute",
        "tags": ["Geographic Routing"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "latitude": { "type": "number" },
                  "longitude": { "type": "number" },
                  "preferredRegion": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Routing decision",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeoRoute"
                }
              }
            }
          }
        }
      }
    },
    "/api/sign/request": {
      "post": {
        "summary": "Sign HTTP request",
        "operationId": "signRequest",
        "tags": ["Request Signing"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE"] },
                  "path": { "type": "string" },
                  "body": { "type": "string" },
                  "timestamp": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Signed request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "signature": { "type": "string" },
                    "nonce": { "type": "string" },
                    "timestamp": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/optimize/response": {
      "post": {
        "summary": "Optimize response for caching",
        "operationId": "optimizeResponse",
        "tags": ["Response Optimization"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": { "type": "object" },
                  "cacheStrategy": {
                    "type": "string",
                    "enum": ["aggressive", "moderate", "conservative", "none"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Optimized response",
            "headers": {
              "Cache-Control": {
                "schema": { "type": "string" }
              },
              "ETag": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/api/monitoring/health": {
      "get": {
        "summary": "System health check",
        "operationId": "getHealth",
        "tags": ["Monitoring"],
        "responses": {
          "200": {
            "description": "System is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthStatus"
                }
              }
            }
          },
          "503": {
            "description": "System is degraded or unhealthy"
          }
        }
      }
    },
    "/api/monitoring/metrics": {
      "get": {
        "summary": "Prometheus metrics",
        "operationId": "getMetrics",
        "tags": ["Monitoring"],
        "responses": {
          "200": {
            "description": "Prometheus format metrics",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" },
          "code": { "type": "string" }
        },
        "required": ["error"]
      },
      "TokenValidation": {
        "type": "object",
        "properties": {
          "valid": { "type": "boolean" },
          "user": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "email": { "type": "string" },
              "role": { "type": "string", "enum": ["ADMIN", "USER", "GUEST", "ANONYMOUS"] }
            }
          },
          "expiresAt": { "type": "string", "format": "date-time" }
        },
        "required": ["valid"]
      },
      "RateLimitStatus": {
        "type": "object",
        "properties": {
          "allowed": { "type": "boolean" },
          "limit": { "type": "integer" },
          "remaining": { "type": "integer" },
          "reset": { "type": "integer" },
          "retryAfter": { "type": "integer" }
        },
        "required": ["allowed", "limit", "remaining"]
      },
      "GeoRoute": {
        "type": "object",
        "properties": {
          "primaryRegion": { "type": "string" },
          "primaryEndpoint": { "type": "string" },
          "fallbackRegions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "latencyEstimate": { "type": "number" },
          "strategy": { "type": "string" }
        },
        "required": ["primaryRegion", "primaryEndpoint"]
      },
      "HealthStatus": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "degraded", "unhealthy"]
          },
          "timestamp": { "type": "string", "format": "date-time" },
          "uptime": { "type": "number" },
          "memory": {
            "type": "object",
            "properties": {
              "heapUsed": { "type": "number" },
              "heapTotal": { "type": "number" },
              "external": { "type": "number" }
            }
          },
          "errors": {
            "type": "object",
            "properties": {
              "total": { "type": "integer" },
              "unique": { "type": "integer" }
            }
          },
          "dependencies": {
            "type": "object",
            "properties": {
              "database": { "type": "string" },
              "cache": { "type": "string" },
              "websocket": { "type": "string" }
            }
          }
        },
        "required": ["status", "timestamp"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "security": [
    { "bearerAuth": [] },
    { "apiKey": [] }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "JWT token management and validation"
    },
    {
      "name": "Rate Limiting",
      "description": "Rate limit enforcement and checking"
    },
    {
      "name": "Geographic Routing",
      "description": "Intelligent region-based routing"
    },
    {
      "name": "Request Signing",
      "description": "HMAC-SHA256 request signing"
    },
    {
      "name": "Response Optimization",
      "description": "Cache and performance optimization"
    },
    {
      "name": "Monitoring",
      "description": "Health and metrics endpoints"
    }
  ]
}
