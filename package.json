{
  "name": "kaizen-elite",
  "version": "13.0.0",
  "description": "KAIZEN Elite Portfolio - Real-time Executive Terminal",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 0 --strictPort=false",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "vercel --prod",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:a11y": "vitest run tests/a11y",
    "test:security": "vitest run tests/security",
    "test:performance": "vitest run tests/performance",
    "test:visual": "vitest run tests/visual",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:chain": "playwright test tests/e2e/auto-chain-loop.spec.js",
    "upgrade:auto": "node scripts/upgrade.js",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:full": "npm run test:coverage && npm run test:e2e"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rollup/pluginutils": "^5.3.0",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "gif-encoder-2": "^1.0.5",
    "jsdom": "^23.2.0",
    "npm-check-updates": "^19.1.2",
    "pngjs": "^7.0.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vite-plugin-glsl": "^1.2.1",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
